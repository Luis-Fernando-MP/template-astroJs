{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "sass/*": ["./src/sass/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["astro/client"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
